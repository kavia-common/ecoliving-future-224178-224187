# Eco Cities Frontend - Environment Variables (CRA)
# Copy this file to ".env" for local development. Variables are read at build time by CRA (only REACT_APP_* are injected).
# Note: For disabling source maps in CRA, prefer setting GENERATE_SOURCEMAP=false in your build environment.

# Base URLs
REACT_APP_API_BASE=
REACT_APP_BACKEND_URL=
REACT_APP_FRONTEND_URL=
REACT_APP_WS_URL=

# Environment and runtime
REACT_APP_NODE_ENV=development
REACT_APP_PORT=3000
REACT_APP_TRUST_PROXY=false

# Logging and health
REACT_APP_LOG_LEVEL=info
REACT_APP_HEALTHCHECK_PATH=/health

# Feature flags and experiments
# JSON: {"calculator": true, "advancedParallax": false}
# CSV: calculator,advancedParallax
REACT_APP_FEATURE_FLAGS=calculator
REACT_APP_EXPERIMENTS_ENABLED=false

# Misc (kept for parity; not actively used by CRA runtime)
REACT_APP_NEXT_TELEMETRY_DISABLED=true
REACT_APP_ENABLE_SOURCE_MAPS=true
